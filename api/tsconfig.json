{
  "compilerOptions": {
    "types": ["@types/jest"],
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "typeRoots": ["./node_module/@types", "./types"],
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
